{
    "name": "mssql-db-insights",
    "displayName": "MSSQL Db Insights",
    "description": "Sql Server Database insights",
    "version": "0.2.3-beta1",
    "publisher": "matticusau",
    "license": "MIT",
    "icon": "images/icon.png",
    "author": {
        "email": "matt.lavery@outlook.com",
        "name": "Matt Lavery",
        "url": "http://www.matticus.net"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/matticusau/sqlops-mssql-db-insights"
    },
    "bugs": {
        "url": "https://github.com/matticusau/sqlops-mssql-db-insights/issues"
    },
    "engines": {
        "vscode": "^1.22.0",
        "sqlops": "*"
    },
    "categories": [
        "Other"
    ],
    "homepage": "https://github.com/matticusau/sqlops-mssql-db-insights",
    "contributes": {
        "configuration": [],
        "commands": [],
        "views": {
            
        },
        "menus":{
            
        },
        "dashboard.tabs": [
            {
                "id": "mssql-db-insights.tab",
                "title": "MSSQL Db Insights",
                "description": "SQL Server Database insights and widgets",
                "container": {
                    "nav-section": [
                        {
                            "id": "dbactivity-container",
                            "title": "DB Activity",
                            "icon": {
                                "light": "./media/line-chart-lightbg.svg",
                                "dark": "./media/line-chart-darkbg.svg"
                            },
                            "container": {
                                "dbactivity-container": {}
                            }
                        },
                        {
                            "id": "dbhealth-container",
                            "title": "DB Health",
                            "icon": {
                                "light": "./media/heartbeat-lightbg.svg",
                                "dark": "./media/heartbeat-darkbg.svg"
                            },
                            "container": {
                                "dbhealth-container": {}
                            }
                        }
                    ]
                }
            }
        ],
        "dashboard.insights": [
            {
                "id": "mssql-db-spaceused.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-db-spaceused.sql",
                    "type": {
                        "pie": {
                            "dataDirection": "horizontal",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": false,
                            "columnsAsLabels": false
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-db-spaceused-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "Logical Name",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterThanOrEquals",
                                        "equals": "95"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "greaterThan",
                                        "equals": "85"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "lessThanOrEquals",
                                        "equals": "85"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "% Used",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-db-spaceused-filetype.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-db-spaceused-filetype.sql",
                    "type": {
                        "horizontalBar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": true,
                            "columnsAsLabels": true
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-db-spaceused-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "Logical Name",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterThanOrEquals",
                                        "equals": "95"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "greaterThan",
                                        "equals": "85"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "lessThanOrEquals",
                                        "equals": "85"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "% Used",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-db-vlfs.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-db-vlfs.sql",
                    "type": {
                        "bar": {
                            "dataDirection": "horizontal",
                            "dataType": "number",
                            "legendPosition": "none",
                            "labelFirstColumn": false,
                            "columnsAsLabels": false
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-db-vlfs-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "DB Name",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterThanOrEquals",
                                        "equals": "10000"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "greaterThan",
                                        "equals": "1000"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "lessThanOrEquals",
                                        "equals": "1000"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Total VLFs",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-db-sessionschart.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-db-sessions.sql",
                    "autoRefreshInterval": 1,
                    "type": {
                        "bar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "none",
                            "labelFirstColumn": false,
                            "columnsAsLabels": false,
                            "yAxisLabel": "Sessions",
                            "xAxisLabel": "Status"
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-db-sessions-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "Session Id",
                            "state": [
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "suspended"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "runnable"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "sleeping"
                                    },
                                    "color": "black"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "running"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Status",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-db-cpumemdisk.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-db-cpumemdisk.sql",
                    "autoRefreshInterval": 1,
                    "type": {
                        "bar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": false,
                            "columnsAsLabels": true,
                            "yAxisLabel": "Resource Consumption",
                            "xAxisLabel": "Session Status and Resource"
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-db-sessions-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "Session Id",
                            "state": [
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "suspended"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "runnable"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "sleeping"
                                    },
                                    "color": "black"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "running"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Status",
                        "actions": null
                    }
                }
            }
        ]
        ,
        "dashboard.containers": [
            {
                "id": "dbactivity-container",
                "container": {
                    "widgets-container": [
                        {
                            "name": "Database Sessions",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-db-sessionschart.insight": {}
                            }
                        },
                        {
                            "name": "Database Resource Usage",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-db-cpumemdisk.insight": {}
                            }
                        }
                    ]
                }
            },
            {
                "id": "dbhealth-container",
                "container": {
                    "widgets-container": [
                        {
                            "name": "Database Space Used",
                            "gridItemConfig": {
                                "sizex": 1,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-db-spaceused.insight": {}
                            }
                        },
                        {
                            "name": "Database Space Used (File Type)",
                            "gridItemConfig": {
                                "sizex": 1,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-db-spaceused-filetype.insight": {}
                            }
                        },
                        {
                            "name": "Database VLFs",
                            "gridItemConfig": {
                                "sizex": 1,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-db-vlfs.insight": {}
                            }
                        }
                    ]
                }
            }
        ]
    }
}